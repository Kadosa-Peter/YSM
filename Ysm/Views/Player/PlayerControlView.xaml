                           Text="{Binding Path=Time, Converter={StaticResource TimeSpanFormatConverter}}" />
                <TextBlock x:Name="Comment"
                           Grid.Column="1"
                           Margin="14,0,0,0"
                           VerticalAlignment="Center"
