<controls:ExtendedWindow
    x:Class="Ysm.Windows.TransferWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Ysm.Controls;assembly=Ysm.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="TransferWindow"
    Width="300"
    Height="80"
    ShowInTaskbar="False"
    Style="{StaticResource ExtendedWindowStyle}"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <Grid>
        <StackPanel Margin="10,0,10,0" VerticalAlignment="Center">
            <TextBlock
                x:Name="Header"
                Style="{StaticResource TextBlockStyle}"
                Text="Transfering YSM Data" />
            <ProgressBar
                Height="30"
                Margin="0,10,0,0"
                IsIndeterminate="True"
                Style="{StaticResource ProgressBarStyle}" />
        </StackPanel>
    </Grid>
</controls:ExtendedWindow>

